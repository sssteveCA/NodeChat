<!DOCTYPE html>
<html lang="it">
    <head>
        <title>{{username}}</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="{{bootstrap_css}}">
        <link rel="stylesheet" href="../css/logged/menu_logged.css">
        <link rel="stylesheet" href="../css/logged/user_profile.css">
        <link rel="stylesheet" href="{{jquery_ui_css}}">
        <link rel="stylesheet" href="../css/footer.css">
        <script src="{{bootstrap_js}}"></script>
        <script src="{{jquery_js}}"></script>
        <script src="{{jquery_ui_js}}"></script>
        <script type="module" src="../js/logged/user_profile.js"></script>
        <script type="module" src="../js/menu.js"></script>
        <script src="../js/footer.js"></script>
    </head>
    <body>
        {{> menu_logged}}
        <div class="{{container}}">
            <div class="header">
                <h1>{{username}}</h1>
            </div>
            <div class="content d-flex flex-column flex-md-row">
                <div class="left-side">
                    <div class="profile-image">
                    </div>
                    <div class="sections">
                        <ul class="list-group">
                            <li id="li-information" class="list-group-item">Informazioni</li>
                            <li id="li-friends" class="list-group-item">Amici</li>
                            <li id="li-photos" class="list-group-item">Foto</li>
                            <li id="li-videos" class="list-group-item">Video</li>
                            <li id="li-account-settings" class="list-group-item">Impostazioni account</li>
                        </ul>
                        <input type="hidden" name="token_key" value="{{token_key}}">
                        <input type="hidden" name="user_id" value="{{user_id}}">
                    </div>
                </div>
                <div class="right-side">
                    <div class="cover-image">
                    </div>
                    <div id="section-content"></div>
                </div>
            </div>
        </div>
        {{> footer}}
    </body>
</html>